{
  "name": "easy-law",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prepare": "husky",
    "dev:web": "pnpm --filter web-project dev",
    "dev:app": "pnpm --filter app-project dev",
    "dev:server": "pnpm --filter server-project dev",
    "db:generate": "pnpm --filter server-project db:generate",
    "db:migrate": "pnpm --filter server-project db:migrate",
    "db:push": "pnpm --filter server-project db:push",
    "db:reset": "pnpm --filter server-project reset-db",
    "db:seed": "pnpm --filter server-project seed:super-admin",
    "db:clean": "pnpm --filter server-project db:clean",
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "start": "pnpm --filter server-project start & pnpm --filter web-project start",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint --fix .",
    "clean": "pnpm -r clean && rimraf node_modules",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsonc": "2.21.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "4.6.2",
    "jsonc-eslint-parser": "2.4.1",
    "rimraf": "6.0.1",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.33",
    "husky": "9.1.7",
    "lint-staged": "15.5.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,json}": "pnpm exec eslint --max-warnings=10 --fix"
  }
}
