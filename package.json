{
  "name": "easy-law",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prepare": "husky",
    "dev:web": "pnpm --filter web-project dev",
    "dev:app": "pnpm --filter app-project dev",
    "dev:server": "pnpm --filter server-project dev",
    "db:reset": "pnpm --filter server-project reset-db",
    "db:seed": "pnpm --filter server-project seed:super-admin",
    "db:generate": "pnpm --filter server-project db:generate",
    "db:push": "pnpm --filter server-project db:push",
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "start": "pnpm --filter server-project start & pnpm --filter web-project start",
    "lint": "pnpm exec eslint .",
    "lint:fix": "pnpm exec eslint --fix .",
    "clean": "pnpm -r clean && rimraf node_modules",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,json}": "pnpm exec eslint --max-warnings=0 --fix"
  }
}
