{
  "name": "@easy-law/server-project",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf node_modules dist",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx . --max-warnings=0",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "seed:super-admin": "tsx scripts/seed-super-admin.ts",
    "reset-db": "tsx scripts/reset-db.ts"
  },
  "dependencies": {
    "@easy-law/shared-types": "workspace:*",
    "better-auth": "1.3.7",
    "@sentry/node": "10.25.0",
    "better-auth-localization": "^2.1.8",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.6",
    "express": "^4.19.2",
    "multer": "^1.4.5-lts.1",
    "postgres": "^3.4.4",
    "qiniu": "^7.13.0",
    "resend": "^6.2.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "typescript": "~5.5.4",
    "@types/multer": "^1.4.11",
    "tsx": "^4.15.5",
    "drizzle-kit": "^0.31.5"
  }
}
