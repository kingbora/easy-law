{
  "name": "@easy-law/server-project",
  "version": "0.0.1",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "start": "node ./dist/index.js",
    "build": "tsup --env.NODE_ENV production",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf node_modules dist",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx . --max-warnings=0",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.ts",
    "db:push": "drizzle-kit push --config drizzle.config.ts",
    "seed:super-admin": "tsx scripts/seed-super-admin.ts",
    "reset-db": "tsx scripts/reset-db.ts"
  },
  "dependencies": {
    "@easy-law/shared-types": "workspace:*",
    "better-auth": "1.3.7",
    "@sentry/node": "10.25.0",
    "better-auth-localization": "2.1.8",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.6.1",
    "drizzle-orm": "0.44.6",
    "express": "4.21.2",
    "multer": "1.4.5-lts.2",
    "postgres": "3.4.7",
    "qiniu": "7.14.0",
    "@types/cookie-parser": "1.4.9",
    "@types/cors": "2.8.19",
    "@types/express": "4.17.23",
    "@types/node": "20.19.21",
    "typescript": "5.5.4",
    "@types/multer": "1.4.13",
    "tsx": "4.20.6",
    "tsup": "8.5.1",
    "drizzle-kit": "0.31.5"
  }
}
